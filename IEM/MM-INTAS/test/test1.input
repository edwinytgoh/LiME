!#######################################################################
!################  INPUT  FILE  FOR  MM-INTAS  PROGRAM  ################
!#######################################################################
 
!=======================================================================
 BEGIN PARTICLES
 
                    ! NUMBER OF PARTICLES ------------------------------
   NP         1000  ! . number of particles in the domain

                    ! INITIALISATION OF INDEPENDENT SCALARS ------------
   INITSCAL      2  ! 0 - one peak : MEAN_MIXF
                    ! 1 - two equal peaks: MIN_MIXF and MAX_MIXF
                    ! 2 - initialise independent scalars according to a
                    !     beta distribution based on mean and variance:
                    !     MEAN_MIXF and VAR_MIXF
   MEAN_MIXF    0.5 ! mean mixture fraction (INITSCAL = 0 or 2)
   VAR_MIXF     0.1 ! mixture fraction variance (INITSCAL = 2)
   MIN_MIXF     0.  ! 1st peak mixture fraction (INITSCAL = 1)
   MAX_MIXF     1.  ! 2nd peak mixture fraction (INITSCAL = 1)

                    ! TURBULENCE FREQUENCY -----------------------------
   OMEGA       100. ! . mean turbulence frequency (= epsilon / k)
 
 END PARTICLES
!=======================================================================


!=======================================================================
 BEGIN ITERATIONS

                    ! ITERATIONS ---------------------------------------
   NITER       100  ! . number of timesteps
 
                    ! TIMESTEPS ----------------------------------------
   DT        1.E-3  ! . timestep

 END ITERATIONS
!=======================================================================


!=======================================================================
 BEGIN MIXING

   MIXMOD         1  ! mixing model
                     !   0 - no mixing
                     !   1 - IEM
                     !   2 - Coalescence Dispersion (C/D)
                     !   3 - Mapping Closure

   MIXEXT         2  ! model determining degree of 
                     ! mixing in case of C/D model (PDF A(alpha))
                     !   1 - delta (full mixing)
                     !   2 - uniform (most standard)
                     !   3 - quartic
                     !   4 - cosine
                     !   5 - linear
                     !   6 - quadratic

   CPHI         2.0  ! scalar dissipation rate constant (standard value 2)

 END MIXING
!=======================================================================


!=======================================================================
 BEGIN LOOKUP
 
   CASE          1  ! . 0 - icase=0 : no lookup, mixture fraction only
                    ! . 1 - icase=1 : methane case
                    !     mixture fraction = 1: pure methane, T = 298 K
                    !     mixture fraction = 0: pure air,     T = 298 K
 
   ILUT          1  ! look-up every ilut-th iteration
                    !   0 - no look-up

 END LOOKUP
!=======================================================================

 
!=======================================================================
 BEGIN PDF_OUTP

   IPDFOP       10  ! file every IPDFOP-th iteration
                    ! 0 - no output

 END PDF_OUTP
!=======================================================================

!#######################################################################
!#######################  END  OF  INPUT  FILE  ########################
!#######################################################################
